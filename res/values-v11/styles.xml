<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HoloCompatDialogs" parent="@style/KikWindowBackgrounds">
        <item name="android:autoCompleteTextViewStyle">@style/KikAutoCompleteEditText</item>
        <item name="android:editTextStyle">@style/KikEditText</item>
        <item name="android:dialogTheme">@android:style/Theme.Holo.Dialog</item>
        <item name="android:alertDialogTheme">@style/AlertFrameFix</item>
    </style>
    <style name="KikTheme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="KikTheme.Light.NoTitleBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="White.Progress.Spinner" parent="@android:style/Theme.Light" />
    <style name="AlertFrameFix" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
